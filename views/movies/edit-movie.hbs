<h2>Edit this movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">

    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="{{movie.title}}"/>

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value="{{movie.genre}}"/>

    <label for="plot">Plot</label>
    <textarea name="plot" id="plot" cols="30" rows="10">{{movie.plot}}</textarea>

    <select name="cast" id="cast">
        {{#each celebrities}}
            <option value="{{_id}}" selected>{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">Edit Movie</button>

</form>